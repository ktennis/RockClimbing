@{
    ViewData["Title"] = "Pricing";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tutoring Services Calculator</title>
    <link rel="stylesheet" href="styles.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="calculator.js" defer></script>
</head>
<body>
    <h1 class="display-4">PRICING</h1>

    <div class="input-container">

        <div class="field-container">
            <label for="hours">Number of hours needed:</label>
            <input type="number" id="hours" min="0" class="input-field">
        </div>
        <div class="field-container">
            <label>Hourly rate:</label>
            <input type="text" id="hourly-rate" value="$50" readonly class="input-field">
        </div>
        <div class="field-container">
            <label for="total">Total:</label>
            <input type="text" id="total" readonly class="input-field">
        </div>
    </div>
    <button id="calculate-btn">Calculate Total</button>
</body>
</html>

